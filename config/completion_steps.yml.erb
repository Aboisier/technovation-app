student:
  pre_program_survey:
    complete_condition: "pre_survey_completed?"
    links:
      survey:
        url: "#"

      mark_complete:
        link_options:
          postfix: true
        tag_options:
          data:
            method: "put"

  parental_consent:
    complete_condition: "parental_consent_signed?"
    links: 
      resend:
        url: 'student_parental_consent_notice_path'
        tag_options:
          data:
            method: "post"

  create_join_team:
    complete_condition: "is_on_team?"
    prerequisites: "pre_program_survey, parental_consent"
    unlocks: "student_team_path[team], new_student_team_path, new_student_team_search_path"
    links: 
      create:
        url: "new_student_team_path"
      join:
        url: "new_student_team_search_path"

  find_mentor:
    complete_condition: "team_has_mentor?"
    prerequisites: "pre_program_survey, parental_consent, create_join_team"
    unlocks: "new_student_mentor_search_path"
    links:
      browse:
        url: "new_student_mentor_search_path"

