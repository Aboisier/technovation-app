<%= render 'profiles/show',
  edit: true,
  path: edit_admin_profile_path(@regional_ambassador.account),
  account: @regional_ambassador %>

<dl>
  <dt>Consent waiver</dt>
  <dd><%= @consent_waiver.status %></dd>

  <dt>Background check</dt>
  <dd><%= @report.status %></dd>

  <dt>Browser / OS Info</dt>
  <dd>
    <%= [profile.browser_name,
         profile.browser_version,
         profile.os_name,
         profile.os_version].compact.join(' - ') %>
  </dd>

  <dt>Actions</dt>
  <dd>
    <% if @regional_ambassador.approved? %>
      <%= @regional_ambassador.first_name %> is approved.
      <%= render 'admin/regional_ambassadors/change_status_link',
                 ambassador: @regional_ambassador,
                 status: :pending,
                 text: "undo" %>

    <% elsif @regional_ambassador.declined? %>
      <%= @regional_ambassador.first_name %> has been declined.
      <%= render 'admin/regional_ambassadors/change_status_link',
                 ambassador: @regional_ambassador,
                 status: :pending,
                 text: "undo" %>
    <% else %>
      <%= render 'admin/regional_ambassadors/change_status_link',
                 ambassador: @regional_ambassador,
                 status: :approved,
                 text: "approve" %>&nbsp;|

      <%= render 'admin/regional_ambassadors/change_status_link',
                 ambassador: @regional_ambassador,
                 status: :declined,
                 text: "decline" %>
    <% end %>

    <%= simple_form_for @regional_ambassador,
      url: admin_profile_path(@regional_ambassador),
      html: { data: { remote: true } } do |f| %>
      <%= f.fields_for :account do |a| %>
        <%= a.input :location_confirmed, as: :boolean %>
      <% end %>
    <% end %>
  </dd>
</dl>
