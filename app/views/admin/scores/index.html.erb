<div class="flex-row">
  <div class="flex-col-md-4">
    <h1 class="appy-title">
      All Scores
    </h1>
  </div>

  <div class="flex-col-md-4">
    <h1 class="appy-title">
      <%= pluralize SubmissionScore.quarterfinals.complete.count,
        "complete score" %>
    </h1>
  </div>

  <div class="flex-col-md-4">
    <h1 class="appy-title">
      <%= pluralize SubmissionScore.quarterfinals.incomplete.count,
        "pending score" %>
    </h1>
  </div>

  <%= render 'regional_ambassador/scores/index',
    submissions: @submissions,
    event: @event,
    events: @events,
    division: @division,
    scope: :admin %>
</div>
