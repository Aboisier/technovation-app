---

<%
  [
    { title: "Senior Division", columns: @senior_columns, id: "senior" },
    { title: "Junior Division", columns: @junior_columns, id: "junior" }
  ].each do |section|

    section_id = section[:id]
%>
  <div id="<%= section_id %>" class="row">
    <div id="<%= [section_id, "header"].join("-") %>" class="col-12">
      <h2><%= section[:title] %></h2>
    </div>
    <% section[:columns].each_with_index do |column, idx| %>
      <div id="<%= [section_id, "col", idx + 1].join("-") %>" class="col-12 col-sm-12 col-md-6">
        <% column.each do |entry| %>
          <table id="<%= [section_id, entry[:country].downcase].join("-") %>" class="table">
            <thead>
              <tr
                class="country"
                style="background-color: #43b02a; color: white; font-weight: bold;"
              >
                <td colspan="2"><%= entry[:friendly_name] %></td>
              </tr>
            </thead>
            <tbody>
              <% entry[:submissions].each do |sub| %>
                <tr class="semifinalist">
                  <td><%= sub.team.name %></td>
                  <td><%= sub.app_name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
