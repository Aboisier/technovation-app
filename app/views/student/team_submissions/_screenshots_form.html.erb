<%= direct_upload_form_for @screenshots_uploader,
  html: {
    id: "team_submission_screenshots",
    class: "fancy-image-upload",
    data: {
      process_images_url: student_image_process_jobs_url,
      screenshots_url: student_screenshots_url,
    }
} do |f| %>
  <%= f.label :screenshots, t("models.team_submission.screenshots") %>
  <%= f.file_field :screenshots, multiple: true %>
  <%= f.submit t("views.application.continue"), class: "appy-button" %>
<% end %>
