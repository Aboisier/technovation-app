<div class="card">
  <div class="card__heading">
    Screenshots

    <% if submission.screenshots.any? %>
      <%= fa_icon("check-circle", class: "card-heading__flair") %>
    <% else %>
      <%= fa_icon("circle-o", class: "card-heading__flair") %>
    <% end %>
  </div>

  <div class="card__body">
    <% if submission.screenshots.any? %>
      <ul class="gallerify">
        <%= render submission.screenshots, cached: true %>
      </ul>

      <div class="card__actions-row card__actions-row--pos-end">
        <%= link_to "Add more screenshots", [:edit, :student, submission, step: :screenshots], class: "appy-button" %>
      </div>
    <% else %>
      <div class="card__actions-row card__actions-row--pos-end">
        <%= link_to "Upload Screenshots", [:edit, :student, submission, step: :screenshots], class: "appy-button" %>
      </div>
    <% end %>
  </div>
</div>
