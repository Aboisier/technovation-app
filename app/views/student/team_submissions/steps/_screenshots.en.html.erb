<div class="card ts-screenshots">
  <div class="card__heading submission-steps__market">
    Screenshots

    <% if submission.screenshots.length > 1 %>
      <button data-modal-trigger="screenshots-edit"
              role="button"
              class="appy-button">
        Edit
      </button>
    <% else %>
      <button data-modal-trigger="screenshots-edit"
              role="button"
              class="appy-button"
              style="display:none;">
        Edit
      </button>
    <% end %>
    <% if submission.screenshots.any? %>
      <button data-modal-trigger="screenshots-modal"
              role="button"
              class="appy-button">
        Add Screenshots
      </button>
    <% end %>
  </div>

  <div class="card__body">
    <% if submission.screenshots.any? %>
      <ul class="gallerify">
        <%= render partial: 'student/screenshots/screenshot',
          collection: submission.screenshots %>
      </ul>
    <% else %>
      <div class="ts-screenshots__no-screenshots-body">
        <div class="ts-screenshots__no-screenshots-text">- no screenshots added -</div>
        <div data-modal-trigger="screenshots-modal" role="button" class="appy-button">Add Screenshots</div>
      </div>
    <% end %>
  </div>
</div>

<div class="modalify" id="screenshots-modal" data-heading="Screenshots">
  <%= render 'student/team_submissions/screenshots_form', submission: submission %>
</div>

<div class="modalify" id="screenshots-edit" data-heading="Sort Screenshots">
  <%= render 'student/team_submissions/screenshots_edit', submission: submission %>
</div>
