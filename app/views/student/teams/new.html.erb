<div class="profile-pages student-dashboard">
  <%= render 'student/dashboards/navigation' %>

  <p><%= t("views.student.teams.new.intro") %></p>

  <div class="well">
    <h3><%= t("views.student.teams.new.title") %></h3>

    <%= simple_form_for [:student, @team] do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>

      <%= f.button :submit, t("views.application.create", thing: t("models.team.class_name")) %>
    <% end %>
  </div>

  <div class="well">
    <h3><%= t("views.student.teams.new.join") %></h3>
    <%= link_to t("controllers.teams.index.browse"), '#', class: "primary-button" %>
  </div>
</div>
