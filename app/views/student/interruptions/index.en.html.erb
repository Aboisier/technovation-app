<%
    # call #valid? to load errors
  current_student.valid?
%>

<% if current_student.student_profile.errors.keys.include?(:parent_guardian_email) %>
  <div class="notify-banner notify-banner--alert">
    <p>
    Hey, wait a moment!
    We detected a problem with your profile.<br />
    Your parent/guardian email appears to be invalid.
    You need to fix this before you can continue.
    </p>
  </div>

  <p class="center">
  <%= link_to "Update your parent/guardian email address",
    edit_student_account_path(anchor: "account-profile-details"),
    class: "appy-button"%>
</p>
<% else %>
  <div class="notify-banner notify-banner--alert">
    <p>
    Hey, wait a moment!
    We detected a problem with your profile.
    </p>
  </div>

  <p class="center">
  <%= link_to "Update your account", edit_student_account_path, class: "appy-button"%>
  </p>
<% end %>
