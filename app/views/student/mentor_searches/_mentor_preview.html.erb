<div class="mentor">
  <h1>
    <%= link_to mentor_preview.full_name, student_mentor_path(mentor_preview) %>

    <span>
      <%= mentor_preview.school_company_name %>
      &mdash;
      <%= mentor_preview.address_details %>
    </span>
  </h1>

  <% mentor_preview.expertises.each do |expertise| %>
    <% cache(expertise) do %>
      <span class="mentor_expertise badge-<%= @search_filter.badge_css(expertise) %>">
        <%= expertise.name %>
      </span>
    <% end %>
  <% end %>

  <% if mentor_preview.is_on_team? %>
    <span class="badge-notice on-team"><%= t("views.student.mentor_searches.new.mentor_preview.on_team") %></span>
  <% else %>
    <span class="badge-success no-team"><%= t("views.student.mentor_searches.new.mentor_preview.needs_team") %></span>
  <% end %>
</div>
