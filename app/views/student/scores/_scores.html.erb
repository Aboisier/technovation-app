<div class="grid">
  <% scores.each do |score| %>
    <% globes = %w{🌍 🌎 🌏}.shuffle %>

    <div class="grid__col-6">
      <div class="score-title">
        <div class="score-title__judge">
          <%= globes.pop %>
          Score from <strong><%= score.judge_profile.address_details %></strong>
          <%= globes.pop %>
        </div>

        <div class="score-title__total">
          <%= score.total %>
        </div>
      </div>

      <dl class="accordion">
        <dt>Ideation: <%= score.ideation_total %></dt>

        <dd>
          <%= render "student/scores/section",
            score: score,
            section: :ideation %>
        </dd>

        <dt>Technical: <%= score.technical_total %></dt>

        <dd>
          <%= render "student/scores/section",
            score: score,
            section: :technical %>
        </dd>

        <% if current_team.senior? %>
          <dt>Entrepreneurship: <%= score.entrepreneurship_total %></dt>

          <dd>
            <%= render "student/scores/section",
              score: score,
              section: :entrepreneurship %>
          </dd>
        <% end %>

        <dt>Pitch: <%= score.pitch_total %></dt>

        <dd>
          <%= render "student/scores/section",
            score: score,
            section: :pitch %>
        </dd>

        <dt>Overall Impression: <%= score.overall_impression_total %></dt>

        <dd>
          <%= render "student/scores/section",
            score: score,
            section: :overall %>
        </dd>
      </dl>
    </div>
  <% end %>
</div>
