<%= simple_form_for [account_type, @team_member_invite], html: { class: "full-size" } do |f| %>
  <%= f.hidden_field :team_id %>

  <%= f.input :invitee_email,
              label: false,
              placeholder: t("views.team_member_invites.form.invite_by_email") %>
  <%= f.button :submit, t("views.application.invite"), class: "appy-button" %>
<% end %>
