<%= f.fields_for :regional_ambassador_profile do |r| %>
  <%= r.input :organization_company_name,
    label: t("models.regional_ambassador_profile.organization_company_name") %>

  <%= r.input :job_title,
    label: t("models.regional_ambassador_profile.job_title") %>

  <%= r.input :ambassador_since_year,
    collection: (2009..Time.current.year).to_a.reverse,
    label: t("models.regional_ambassador_profile.ambassador_since_year") %>

  <%= r.input :bio,
    label: t("models.regional_ambassador_profile.bio.signup_label") %>
<% end %>
