<%= f.input :first_name %>

<%= f.input :last_name %>

<%= f.input :date_of_birth, as: :date, prompt: true,
                                       start_year: f.object.youngest_birth_year,
                                       end_year: f.object.oldest_birth_year,
                                       input_html: { class: "account_dob" } %>

<%= f.input :geocoded, input_html: {
                         value: (f.object.address_details unless f.object.city.blank?),
                       },
                       label: t("models.account.geocoded") %>

<% if f.object.persisted? %>
  <h6 id="account-profile-image" class="signup-section">
    <%= t("views.signups.new.section_headers.profile_image") %>
  </h6>

  <%= image_tag f.object.profile_image, with: 233, height: 233 %>
  <%= f.input :profile_image %>
  <%= f.input :profile_image_cache, as: :hidden %>
<% end %>
