<div class="name_field">
  <%= f.input :first_name %>
</div>

<div class="name_field last">
  <%= f.input :last_name %>
</div>

<%= f.input :email, as: :email %>

<%= f.input :date_of_birth, as: :date, prompt: true,
                                       start_year: Date.today.year - 100,
                                       end_year: Date.today.year - 12 %>

<div class="address_field">
  <%= f.input :country, collection: CountryStateSelect.countries_collection %>
</div>

<div class="address_field">
  <%= f.input :region, label: t('models.account.region') %>
</div>

<div class="address_field last">
  <%= f.input :city %>
</div>
