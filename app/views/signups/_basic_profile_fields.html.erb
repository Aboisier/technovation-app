<%= f.input :first_name %>

<%= f.input :last_name %>

<%= f.input :date_of_birth, as: :date, prompt: true,
                                       start_year: f.object.youngest_birth_year,
                                       end_year: f.object.oldest_birth_year,
                                       input_html: { class: "account_dob" } %>

<label>
  <%= t("models.account.geocoded") %>
  <%= text_field_tag "geocoded", (f.object.address_details unless f.object.city.blank?) %>
</label>

<%= f.input :latitude, as: :hidden, input_html: { id: "latitude" } %>
<%= f.input :longitude, as: :hidden, input_html: { id: "longitude" } %>
<%= f.input :city, as: hidden_or_string(f.object.city), input_html: { id: "city", class: "location-hidden" } %>
<%= f.input :state_province, as: hidden_or_string(f.object.state_province), input_html: { id: "state", class: "location-hidden" } %>
<%= f.input :country, as: hidden_or_string(f.object.country), input_html: { id: "country", class: "location-hidden" } %>

<% if f.object.persisted? %>
  <h6 id="account-profile-image" class="signup-section">
    <%= t("views.signups.new.section_headers.profile_image") %>
  </h6>

  <%= image_tag f.object.profile_image, with: 233, height: 233 %>
  <%= f.input :profile_image %>
  <%= f.input :profile_image_cache, as: :hidden %>
<% end %>
