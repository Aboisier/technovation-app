<%= f.fields_for :mentor_profile do |m| %>
  <%= m.input :school_company_name,
              label: t('models.mentor_profile.school_company_name') %>

  <%= m.input :job_title %>

  <h4><%= t('views.signups.form.choose_expertises') %></h4>

  <%= m.collection_check_boxes :expertise_ids, @expertises, :id, :name do |b| %>
    <span class="inline-checkbox">
      <%= b.check_box %><%= b.label { b.text } %>
    </span>
  <% end %>
<% end %>
