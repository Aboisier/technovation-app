<div class="signup_page">
  <h1><%= t('views.signups.new.title') %></h1>

  <%= simple_form_for(@signup) do |f| %>
    <div class="basic_fields">
      <%= render 'signups/basic_profile_fields', f: f %>
    </div>

    <div class="specialized_fields">
      <%= render 'registration_roles' %>
      <%= render 'signups/judge_profile_fields', f: f %>
      <%= render 'signups/student_profile_fields', f: f %>

      <%= f.input :password %>
      <%= f.input :password_confirmation,
                  label: t('views.signups.form.confirm_password') %>

      <%= f.button :submit, t('views.signups.form.signup') %>
    </div>
  <% end %>
</div>
