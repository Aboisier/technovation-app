<h1 class="appy-title"><%= @regional_pitch_event.name %></h1>

<p>
  <strong>Division:</strong> <%= @regional_pitch_event.divisions.map(&:name).to_sentence %>
</p>

<p>
  <strong>Time:</strong>
  <%= @regional_pitch_event.starts_at.strftime("%A, %B %e, %-I:%M%P") %> &ndash;
  <%= @regional_pitch_event.ends_at.strftime("%-I:%M%P %Z") %>
</p>

<p>
  <strong>City:</strong> <%= @regional_pitch_event.city %>
</p>

<p>
  <strong>Venue address:</strong> <%= @regional_pitch_event.venue_address %>
</p>

<% unless @regional_pitch_event.eventbrite_link.blank? %>
  <p>
    <strong>Eventbrite link:</strong>
    <%= link_to @regional_pitch_event.eventbrite_link,
      @regional_pitch_event.eventbrite_link,
      target: :_blank %>
  </p>
<% end %>

<div class="standalone-buttons">
  <div class="regional-pitch-event-selection-info">
    <% if current_team.selected_regional_pitch_event == @regional_pitch_event %>
      <p><strong><%= current_team.name %> is attending this event!</strong></p>

      <p>
        <%= link_to 'Check how your submission looks to judges',
          app_path(current_team.submission),
          target: :_blank %>
      </p>

      <p>
        <%= link_to "Remove #{current_team.name} from this event",
          student_regional_pitch_event_selection_path,
          data: {
            method: :delete,
            confirm: "Are you sure you want to remove your team from the event: #{@regional_pitch_event.name}?",
          } %>
      </p>
    <% else %>
      <p>
        <strong>
          <%= current_team.name %>
          is currently attending
          <%= link_to current_team.selected_regional_pitch_event_name,
            student_regional_pitch_event_path(current_team.selected_regional_pitch_event) %>
        </strong>
      </p>

      <p>
        <%= link_to "Select this event instead",
          student_regional_pitch_event_selection_path(event_id: @regional_pitch_event.id),
          data: { method: :post } %>
      </p>
    <% end %>
  </div>

  <p><%= link_to 'Go to your dashboard', student_dashboard_path %></p>
</div>
