<% ra_dashboard ||= false %>

<% unless regional_ambassador.intro_summary.blank? %>
  <div class="panel ra-intro">
    <% if ra_dashboard %>
      <h5 class="reset">
        Your program introduction
      </h5>
    <% else %>
      <h5 class="reset">
        Meet your Regional Ambassador!
      </h5>

      <%= image_tag regional_ambassador.profile_image_url,
        class: "grid__cell-img" %>

      <h6><%= regional_ambassador.full_name %></h6>
    <% end %>

    <%= simple_format regional_ambassador.intro_summary %>

    <ul class="reset">
      <% regional_ambassador.regional_links.each do |link| %>
        <li>
          <% if link.name == "email" %>
            <%= mail_to link.value, web_icon("envelope-o", text: link.value) %>
          <% else %>
            <%= link_to web_icon(link.icon, text: link.display_text), link.url %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
