<li>
  <div class="member-image">
    <% if (open(public_member.profile_image_url(:thumb)) rescue false) %>
      <%= image_tag public_member.profile_image_url(:thumb), width: 80, height: 80 %>
    <% else %>
      <%= image_tag public_member.profile_image_url(:thumb).sub(/\/(\d+)\/(.+)_thumb(.+)/, '/\1/thumb_\2\3'), width: 80, height: 80 %>
    <% end %>
  </div>

  <div class="member-info">
    <h3><%= public_member.first_name %></h3>
  </div>
</li>
