<% if invites.any? %>
  <hr />

  <div class="grid">
    <div class="grid__col-auto grid__col--bleed-x">
      <h3 class="reset">Invites sent</h1>

      <% if SeasonToggles.judging_enabled_or_between? %>
        <p class="hint">
          You cannot approve or decline invitations after the submission deadline.
        </p>
      <% else %>
        <p class="hint">
          Your team is waiting for these people to accept your invitations.
        </p>
      <% end %>

      <ul class="reset">
        <% invites.each do |invite| %>
          <li class="row">
            <% if invite.invitee %>
              <%= render 'invites/registered_invitee', invite: invite, team: team %>
            <% else %>
              <%= render 'invites/unregistered_invitee', invite: invite %>
            <% end %>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
