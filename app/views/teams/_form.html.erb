<div class="form-with-columns">
  <%= simple_form_for [prefix, @team] do |f| %>
    <div class="fields-edit">
      <%= f.input :name %>
      <%= f.input :description %>

      <% action = f.object.persisted? ? :save : :create %>
      <%= f.button :submit, t("views.application.#{action}", thing: t("models.team.class_name")), class: "appy-button" %>

      <%= t("views.application.or") %>

      <% if f.object.persisted? %>
        <%= link_to t("views.application.cancel"), [prefix, @team] %>
      <% else %>
        <%= link_to t("controllers.teams.index.browse"), [:new, prefix, :team_search] %>
      <% end %>
    </div>
  <% end %>
</div>
