<div class="dashboard-page-info">
  <h3 class="team_name"><%= team.name %></h3>

  <p class="team_division">
    <%= t("views.teams.show.division_name",
          name: team.division_name.capitalize) %>
  </p>

  <p class="team_description"><%= team.description %></p>
</div>

<div class="team-memberships">
  <%= render "teams/public_member_list", team: team %>
  <%= render "teams/public_mentor_list", team: team %>
</div>
