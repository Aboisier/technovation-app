<h1 class="appy-title">
  Regional Pitch Event: <%= @pitch_event.name %>
</h1>

<div class="card ra-pitch-event-details">
  <div class="card__body">
    <p>
      <strong>Division:</strong> <%= @pitch_event.divisions.map(&:name).to_sentence %>
    </p>

    <p>
      <strong>Time:</strong>
      <%= @pitch_event.starts_at.strftime("%A, %B %e, %H:%M") %> &ndash;
      <%= @pitch_event.ends_at.strftime("%H:%M %Z") %>
    </p>

    <p>
      <strong>City:</strong> <%= @pitch_event.city %>
    </p>

    <p>
      <strong>Venue address:</strong> <%= @pitch_event.venue_address %>
    </p>

    <p>
      <strong>Eventbrite link:</strong>

      <% unless @pitch_event.eventbrite_link.blank? %>
        <%= link_to @pitch_event.eventbrite_link,
          @pitch_event.eventbrite_link,
          target: :_blank %>
      <% end %>
    </p>
  </div>

  <div class="card__actions-row card__actions-row--pos-end">
    <p>
      <%= link_to 'Edit',
        [:edit, :regional_ambassador, @pitch_event],
        class: "appy-button appy-button--sm" %>

      <%= link_to 'List all events',
        regional_ambassador_regional_pitch_events_path %> |

      <%= link_to 'Back', :back %>
    </p>
  </div>
</div>

<div class="tabs ra-pitch-event-participants-lists">
  <ul class="tab-menu">
    <% if @pitch_event.division_names.include?("senior") %>
      <li class="tab-link">
        <button
          role="button"
          class="tab-button"
          data-tab-id="tab-ra-pitch-senior-teams">
          Senior Teams
        </button>
      </li>
    <% end %>

    <% if @pitch_event.division_names.include?("junior") %>
      <li class="tab-link">
        <button
          role="button"
          class="tab-button"
          data-tab-id="tab-ra-pitch-junior-teams">
          Junior Teams
        </button>
      </li>
    <% end %>

    <li class="tab-link">
      <button
        role="button"
        class="tab-button"
        data-tab-id="tab-ra-pitch-judges">
        Judges
      </button>
    </li>
  </ul>

  <div class="content">
    <% if @pitch_event.division_names.include?("senior") %>
      <div class="tab-content" id="tab-ra-pitch-senior-teams">
        <%= render 'regional_ambassador/regional_pitch_events/team_list',
          pitch_event: @pitch_event,
          division: :senior %>
      </div>
    <% end %>

    <% if @pitch_event.division_names.include?("junior") %>
      <div class="tab-content" id="tab-ra-pitch-junior-teams">
        <%= render 'regional_ambassador/regional_pitch_events/team_list',
          pitch_event: @pitch_event,
          division: :junior %>
      </div>
    <% end %>

    <div class="tab-content" id="tab-ra-pitch-judges">
      <div class="participants-list">
        <p>Judges list / assignments is coming very soon <3</p>
      </div>
    </div>
  </div>
</div>
