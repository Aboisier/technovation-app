<p class="appy-subtitle">
  You're browsing teams that have students and mentors in <%= current_ambassador.region_name %> for the <%= Season.current.year %> season.
</p>

<div class="flex-row">
  <div class="flex-col-md-4">
    <div class="admin-search__filter-options">
      <%= render 'regional_ambassador/teams/filter_options' %>
    </div>
  </div>

  <div class="flex-col-md-8 wrapper__report-column">
    <div class="admin-results-table">
      <div class="admin-results-header-table">
        <div class="header">Name</div>
        <div class="header">Created</div>
        <div class="header">Has mentor(s)</div>
        <div class="header">Division</div>
        <div class="header">City</div>
      </div>

      <div class="admin-results-data-table">
        <% @teams.order('teams.created_at DESC').each do |team| %>
          <div class="row">
            <div class="cell"><%= link_to team.name, regional_ambassador_team_path(team) %></div>
            <div class="cell"><%= time_ago_in_words(team.created_at) %> ago</div>
            <div class="cell"><%= team.mentors.any? ? 'yes' : 'no' %></div>
            <div class="cell"><%= team.division_name %></div>
            <div class="cell"><%= team.city %></div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="wrapper__report-footer">
      <%= render 'regional_ambassador/teams/footer' %>
    </div>
  </div>
</div>
