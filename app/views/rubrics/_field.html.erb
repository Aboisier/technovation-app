<% field = ScoreField.new(category, field_name) %>

<%= f.form_group field_name, label: { text: field.label } do %>
  <% field.value_labels.each do |value_label| %>
    <%= f.radio_button field_name,
                       value_label.value,
                       label: "#{value_label.label} [#{value_label.value}]" %>
  <% end %>

  <%= f.text_area "#{field_name}_comment", label: 'Comment (optional)' %>
<% end %>
