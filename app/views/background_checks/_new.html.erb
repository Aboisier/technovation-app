<h2><%= t("views.background_checks.new.title") %></h2>

<%= simple_form_for @candidate, url: url do |f| %>
  <%= render 'errors', record: @candidate %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>

  <%= f.input :email, as: :email %>

  <%= f.input :zipcode, as: :integer %>

  <%= f.input :date_of_birth, placeholder: "YYYY-MM-DD" %>

  <%= f.input :ssn, placeholder: '999-99-9999' %>

  <%= f.input :driver_license_state, placeholder: "XX" %>

  <p>
    <strong>We do NOT store any sensitive information.</strong><br />
    This form is submitted directly &amp; securely to our screening service
    <%= link_to "Checkr", "https://checkr.com/product/screenings/",
                          rel: "noopener noreferrer",
                          target: "_blank" %>.
  </p>

  <%= f.input :copy_requested, as: :boolean, label: "I want a copy of my report from Checkr when it's completed" %>

  <%= f.button :submit, "Submit your background check" %>
<% end %>
