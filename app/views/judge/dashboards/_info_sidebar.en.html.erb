<div class="flex-col-md-4 dashboard-sidebar border-left">
  <% if SeasonToggles.judging_enabled? %>
    <h3>Score Submissions</h3>

    <% if current_judge.submission_scores.current_round.incomplete.any? %>
      <p>
        <%= link_to "Resume scoring",
          edit_judge_submission_score_path(current_judge.submission_scores.current_round.incomplete.last.id) %>
        <%= current_judge.submission_scores.current_round.incomplete.last.name %>
      </p>
    <% elsif quarterfinals? and current_judge.selected_regional_pitch_event.live? %>
      <p>
        Choose a submission from among the
        <%= current_judge.selected_regional_pitch_event.division_names %>
        teams to get started.
      </p>
    <% elsif current_judge.submission_scores.current_round.incomplete.empty? %>
      <p>
        <%= link_to 'Start a new score', new_judge_submission_score_path %>
      </p>
    <% end %>
  <% end %>

  <h6 class="heading--reset">Judge resources</h6>

  <ul class="list--reset">
    <li>
      <%= link_to "Read the Judging Rubric",
        "http://www.technovationchallenge.org/judging-rubric/",
        target: "_blank" %>
    </li>

    <li>
      <%= link_to "Join Technovation's chat community for judges",
        ENV.fetch("JUDGE_SLACK_SIGNUP_URL"),
        target: "_blank" %>
    </li>
  </ul>
</div>
