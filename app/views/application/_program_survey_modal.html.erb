<% if SeasonToggles.show_survey_link_modal?(current_scope, current_account) %>
  <%= content_tag :div,
    id: "survey-modal",
    class: "modal",
    data: {
      heading: t("views.application.survey"),
      open_on_page_load: true,
      on_close: public_send("#{current_scope}_survey_reminder_url"),
    } do %>
    <div class="modal-content">
      <%= simple_format SeasonToggles.survey_link(current_scope, "long_desc") %>

      <p>
        <%= link_to SeasonToggles.survey_link(current_scope, "text"),
          SeasonToggles.survey_link(
            current_scope,
            "url",
            format_url: true,
            account: current_account
          ),
          target: "_blank" %>
      </p>
    </div>
  <% end %>
<% end %>
