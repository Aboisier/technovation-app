<% urls ||= {} %>

<% if steps.any? %>
  <h2><%= t("views.application.complete_your_profile") %></h2>

  <ol class="completion-steps">
    <% steps.each do |step| %>
      <li class="completion-step status-<%= step.completion_status %>">
        <span class="checkbox"><%= step.checkmark %></span>
        <%= step.label %>
        <%= render 'step_links', step: step, urls: urls, account: account %>
      </li>
    <% end %>
  </ul>
<% end %>
