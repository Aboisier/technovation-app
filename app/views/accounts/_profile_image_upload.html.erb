<%= simple_form_for account, url: url, html: { class: "fancy-upload" } do |f| %>
  <%= image_tag account.profile_image_url, width: 233, height: 233 %>

  <%= link_to t("controllers.accounts.update.change_image"), '#',
              data: { uploader: true },
              class: "transparent-accent-button" %>

  <%= f.input :profile_image %>
  <%= f.button :submit, t("views.application.save") %>
<% end %>
