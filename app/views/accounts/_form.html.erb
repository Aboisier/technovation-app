<%= render layout: 'signups/form',
           locals: {
             signup: @account,
             url: send("#{@account.type_name}_account_path"),
             editing: true,
             title: title,
           } do |f| %>

  <%= f.input :existing_password,
              placeholder: t("views.accounts.edit.existing_password_required"),
              label: t('views.accounts.edit.existing_password') %>

  <%= f.button :submit, t('views.application.save') %>
<% end %>
