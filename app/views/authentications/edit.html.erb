<%= simple_form_for @authentication, url: authentication_path do |f| %>
  <%= f.input :email %>

  <%= f.input :existing_password,
              label: t('views.authentications.edit.existing_password') %>

  <%= f.input :password,
              label: t('views.authentications.edit.new_password') %>

  <%= f.input :password_confirmation,
              label: t('views.authentications.edit.confirm_new_password') %>

  <%= f.button :submit, t('views.application.save') %>
<% end %>
