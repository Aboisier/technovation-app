<div class="signup-page">
  <h2>
    <%= t('views.signups.new.title') %>
    <span class="accent"><%= t("views.signups.new.roles.mentor") %></span>
  </h2>

  <div class="signup-form">
    <%= simple_form_for(@mentor) do |f| %>
      <%= render 'signups/basic_profile_fields', f: f %>
      <%= render 'signups/mentor_profile_fields', f: f %>
      <%= f.input :password %>
      <%= f.input :password_confirmation,
                  label: t('views.signups.form.confirm_password') %>
      <%= f.button :submit, t('views.signups.form.signup') %>
    <% end %>
  </div>
</div>
