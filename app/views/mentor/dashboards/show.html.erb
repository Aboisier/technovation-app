<%= render 'completion_steps',
           steps: CompletionSteps.new(current_mentor),
           urls: {
             pre_program_survey: {
               mark_complete: mentor_account_path(
                 mentor_account: { pre_survey_completed_at: Time.current }
               ),
             },
             consent_waiver: {
               view: new_consent_waiver_path(
                 token: current_mentor.consent_token
               ),
             },
             background_check: {
               mark_complete: mentor_account_path(
                 mentor_account: {
                   mentor_profile_attributes: {
                     id: current_mentor.mentor_profile_id,
                     background_check_completed_at: Time.current,
                   },
                 },
               ),
             },
           } %>
