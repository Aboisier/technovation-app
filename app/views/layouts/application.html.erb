<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title><%= t('views.application.site_title') %></title>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

    <%= stylesheet_link_tag '//cloud.webtype.com/css/fea72f17-6c81-4c13-9e34-58b54a440d85.css', media: :all %>

    <%= render 'favicons' %>
    <link rel="manifest" href="favicons/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="favicons/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">

    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= render 'application/navigation' %>

    <div class="container">
      <%= render 'application/flash_messages' %>
      <%= yield :subnav %>
      <div class="main-content">
        <%= yield %>
      </div>
    </div>

    <%= javascript_include_tag 'application', data: { turbolinks_eval: false } %>
  </body>
</html>
