<% provide :root_path, regional_ambassador_dashboard_path %>
<% provide :menu, render('regional_ambassador/navigation/global_nav') %>

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title><%= t('views.application.site_title') %></title>

    <%= stylesheet_link_tag 'ra', media: 'all' %>
    <%= csrf_meta_tags %>

    <%= yield :head_js %>
  </head>

  <body>
    <%= render 'admin/navigation' %>

    <div class="container">
      <%= render 'flash_messages' %>
      <div class="main-content">
        <%= yield %>
      </div>
    </div>

    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?v=3.exp&key=#{ENV.fetch("GOOGLE_MAPS_API_KEY")}&libraries=places" %>
    <%= javascript_include_tag 'ra' %>
    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/typeahead.js/0.10.4/dist/typeahead.bundle.min.js" %>
    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/typeahead-addresspicker/0.1.4/typeahead-addresspicker.min.js" %>
    <%= javascript_include_tag 'technovation-typeahead' %>
  </body>
</html>
